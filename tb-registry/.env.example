# TB Registry Configuration

# Server
HOST=0.0.0.0
PORT=4025
DEBUG=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:4025","http://localhost:8000","http://localhost:8080"]

# CloudM.Auth (NEW - replaces Clerk)
CLOUDM_JWT_SECRET=your_shared_jwt_secret_here
CLOUDM_AUTH_URL=http://localhost:4025

# Clerk Authentication (DEPRECATED - will be removed after migration)
# CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
# CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Primary MinIO Storage
MINIO_PRIMARY_ENDPOINT=localhost:9000
# docker and mini on host pc not in docjer use host.docker.internal:9000
MINIO_PRIMARY_ACCESS_KEY=minioadmin
MINIO_PRIMARY_SECRET_KEY=minioadmin
MINIO_PRIMARY_BUCKET=tb-registry
MINIO_PRIMARY_SECURE=false

# Mirror MinIO Storage (optional)
# MINIO_MIRROR_ENDPOINT=mirror.example.com:9000
# MINIO_MIRROR_ACCESS_KEY=minioadmin
# MINIO_MIRROR_SECRET_KEY=minioadmin
# MINIO_MIRROR_BUCKET=tb-registry-mirror
# MINIO_MIRROR_SECURE=true

