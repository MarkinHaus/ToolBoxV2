# ============================================================
# ToolBoxV2 - Custom Auth Environment Configuration
# ============================================================
# Copy this file to .env and fill in the values.
# Generate secrets: python -c "import secrets; print(secrets.token_hex(64))"

# === Application ===
TB_ENV=development                          # development | production
APP_BASE_URL=http://localhost:8000          # Dev base URL
APP_BASE_URL_PROD=https://simplecore.app    # Production base URL

# === JWT Configuration ===
TB_JWT_SECRET=                              # REQUIRED: JWT signing secret (min 64 chars)
TB_COOKIE_SECRET=                           # REQUIRED: Session cookie signing secret

# === Discord OAuth2 ===
# Setup: https://discord.com/developers/applications
# → New Application → OAuth2 → Add Redirect URI
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# === Google OAuth2 ===
# Setup: https://console.cloud.google.com/apis/credentials
# → Create OAuth 2.0 Client ID → Web application → Add Redirect URI
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# === WebAuthn Passkeys ===
# RP = Relying Party (your domain)
# For localhost dev: use "localhost" as RP_ID
# For production: use your domain without protocol (e.g., "simplecore.app")
PASSKEY_RP_ID=localhost
PASSKEY_RP_NAME=ToolBoxV2
PASSKEY_ORIGIN=http://localhost:8000

