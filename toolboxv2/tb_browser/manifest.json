{
  "manifest_version": 3,
  "name": "ToolBox Pro - AI Assistant & Password Manager",
  "version": "3.0.0",
  "description": "Advanced browser extension with gesture control, ISAA AI assistant, voice input, live search, and secure password management with 2FA support",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "contextMenus",
    "webNavigation",
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "sidePanel"
  ],

  "host_permissions": [
    "http://localhost:8080/*",
    "https://simplecore.app/*",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/*",
        "assets/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/gesture-detector.js","src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "action": {
    "default_title": "ToolBox Pro - AI Assistant & Password Manager",
    "default_icon": {
      "16": "icons/tb16.png",
      "32": "icons/tb32.png",
      "48": "icons/tb48.png",
      "128": "icons/tb128.png"
    }
  },

    "side_panel": {
    "default_path": "src/popup.html"
  },

  "commands": {
    "toggle-toolbox": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Toggle ToolBox Pro"
    },
    "voice-command": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Activate Voice Command"
    },
    "quick-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Quick Page Search"
    },
    "password-autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Auto-fill Password"
    }
  },

  "icons": {
    "16": "icons/tb16.png",
    "32": "icons/tb32.png",
    "48": "icons/tb48.png",
    "128": "icons/tb128.png"
  }
}
