{
  "name": "tb-language",
  "displayName": "TB Language",
  "description": "Language support for TB (.tbx) files",
  "version": "1.0.0",
  "publisher": "tb-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tb",
        "aliases": ["TB Language", "tb", "tbx"],
        "extensions": [".tbx"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/tb-icon-light.png",
          "dark": "./icons/tb-icon-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "tb",
        "scopeName": "source.tb",
        "path": "./syntaxes/tb.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tb",
        "path": "./snippets/tb.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TB Language",
      "properties": {
        "tb.executablePath": {
          "type": "string",
          "default": "tb",
          "description": "Path to TB executable"
        },
        "tb.defaultMode": {
          "type": "string",
          "enum": ["jit", "compiled", "streaming"],
          "default": "jit",
          "description": "Default execution mode"
        }
      }
    },
    "commands": [
      {
        "command": "tb.run",
        "title": "Run TB Program",
        "category": "TB"
      },
      {
        "command": "tb.runStreaming",
        "title": "Run TB Program (Streaming)",
        "category": "TB"
      },
      {
        "command": "tb.compile",
        "title": "Compile TB Program",
        "category": "TB"
      },
      {
        "command": "tb.check",
        "title": "Check TB Program",
        "category": "TB"
      }
    ],
    "keybindings": [
      {
        "command": "tb.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == tb"
      },
      {
        "command": "tb.check",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorLangId == tb"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:tb"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p syntaxes",
    "watch": "tsc -watch -p syntaxes"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.0"
  }
}
