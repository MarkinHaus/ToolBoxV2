{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "simple-core",
  "version": "0.1.0",
  "identifier": "com.simple-core.app",
  "build": {
    "devUrl": "http://localhost:8080/",
    "frontendDist": "../../dist"
  },
  "app": {
      "withGlobalTauri": true,
    "windows": [
      {
        "title": "SimpleCore - ToolBoxV2",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' http://localhost:* ws://localhost:* https://simplecore.app https://*.simplecore.app wss://*.simplecore.app"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU1NjMyM0YyMzQ0RUVEQgpSV1RiN2tRalB6SldEcmZKVHUvbkdaMlZQZHZSelVlWnhvKzVNdmZYaGxDTlpXbHZEU0JyT1JSeQo=",
      "endpoints": ["https://simplecore.app/api/updater/{{target}}/{{current_version}}"]
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "setup.html",
      "starting.html"
    ],
    "externalBin": [
      "binaries/tb-worker"
    ],
    "android": {
      "versionCode": 100,
      "minSdkVersion": 28
    }
  }
}
