{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "simple-core",
  "version": "0.1.0",
  "identifier": "com.simple-core.app",
  "build": {
    "frontendDist": "../../dist"
  },
  "app": {
      "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://cdn.jsdelivr.net blob:",
        "worker-src": "'self' blob:",
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net",
        "font-src": "'self' https://fonts.gstatic.com https://cdn.jsdelivr.net",
        "img-src": "'self' data: https: asset: http://asset.localhost",
        "connect-src": "'self' http://localhost:* ws://localhost:* https://simplecore.app https://*.simplecore.app wss://*.simplecore.app ipc: http://ipc.localhost https://unpkg.com https://cdn.jsdelivr.net https://*.clerk.accounts.dev https://*.clerk.com https://clerk.accounts.dev https://clerk-telemetry.com https://*.clerk-telemetry.com"
      },
      "dangerousDisableAssetCspModification": ["style-src", "script-src", "worker-src"]
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU1NjMyM0YyMzQ0RUVEQgpSV1RiN2tRalB6SldEcmZKVHUvbkdaMlZQZHZSelVlWnhvKzVNdmZYaGxDTlpXbHZEU0JyT1JSeQo=",
      "endpoints": ["https://simplecore.app/api/updater/{{target}}/{{current_version}}"]
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "setup.html",
      "starting.html"
    ],
    "externalBin": [
      "binaries/tb-worker"
    ],
    "android": {
      "versionCode": 100,
      "minSdkVersion": 28
    }
  }
}
